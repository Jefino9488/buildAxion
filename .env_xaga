# Default configuration for AxionOS xaga automation
# Copy to .env and edit as needed.

# Flow control
RUN_ENV_SETUP=true
RUN_SOURCE_SYNC=true
RUN_BUILD=false
DRY_RUN=false

# AxionOS/AOSP repo
AXION_REMOTE_URL=https://github.com/AxionAOSP/android.git
AXION_BRANCH=lineage-23.0

# Source sync / device
WORKDIR=axionos
THREADS=
WITH_MIUI_CAM=true
APPLY_WPA_PATCHES=true
BUILD_VOLUME_DEVICE=
USE_SAFE_BUILD=true

# Build / Bot
DEVICE=xaga
VARIANT=userdebug
ROM_TYPE=axion-pico
CONFIG_OFFICIAL_FLAG=
UPLOAD_OTA_JSON=false
OTA_JSON_PATH=vendor/ota/your_device_name.json
PIN_SUCCESS_MESSAGE=true

# Telegram
CONFIG_CHATID="-1002283159085"
CONFIG_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
CONFIG_ERROR_CHATID="-1002283159085"

# Uploads
RCLONE_REMOTE=
RCLONE_FOLDER=
PIXELDRAIN_API_KEY=

# Power
POWEROFF=false
